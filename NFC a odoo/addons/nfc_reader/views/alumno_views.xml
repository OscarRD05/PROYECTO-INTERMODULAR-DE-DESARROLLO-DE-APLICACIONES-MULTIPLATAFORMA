<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_nfc_alumno_list" model="ir.ui.view">
            <field name="name">nfc.alumno.list</field>
            <field name="model">nfc.alumno</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="cial"/>
                    <field name="uid_nfc"/>
                </list>
            </field>
        </record>

        <record id="view_nfc_alumno_form" model="ir.ui.view">
            <field name="name">nfc.alumno.form</field>
            <field name="model">nfc.alumno</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="dni"/>
                            <field name="cial"/>
                            <field name="uid_nfc"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_nfc_alumnos" model="ir.actions.act_window">
            <field name="name">Alumnos</field>
            <field name="res_model">nfc.alumno</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_nfc_root" name="NFC" sequence="10" application="True"/>
        <menuitem id="menu_nfc_alumnos" name="Alumnos" parent="menu_nfc_root" action="action_nfc_alumnos" sequence="10"/>
    </data>
</odoo>
