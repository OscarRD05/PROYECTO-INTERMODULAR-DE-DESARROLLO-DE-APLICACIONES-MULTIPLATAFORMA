<odoo>

    <!-- Vista lista -->
    <record id="view_alumno_tree" model="ir.ui.view">
        <field name="name">nfc.alumno.tree</field>
        <field name="model">nfc.alumno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="dni"/>
                <field name="cial"/>
                <field name="curso"/>
                <field name="uid_nfc"/>
            </tree>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">nfc.alumno.form</field>
        <field name="model">nfc.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="dni"/>
                        <field name="cial"/>
                        <field name="curso"/>
                        <field name="uid_nfc"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_alumnos" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">nfc.alumno</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_nfc_root" name="NFC"/>
    <menuitem id="menu_nfc_alumnos"
              name="Alumnos"
              parent="menu_nfc_root"
              action="action_alumnos"/>

</odoo>
